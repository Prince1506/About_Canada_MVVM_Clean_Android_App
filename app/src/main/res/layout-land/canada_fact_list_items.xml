<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_about_canada_list_item"
    android:layout_width="match_parent"
    android:padding="@dimen/margin_10dp"
    android:layout_height="wrap_content"
    android:background="@drawable/gradient_transparent_to_semi_transparent">


    <TextView
        android:id="@+id/tv_list_item_heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_5dp"
        android:layout_marginBottom="@dimen/margin_5dp"
        android:fontFamily="sans-serif"
        android:gravity="left"
        android:text="@string/dash"
        android:textColor="@color/list_item_heading_color"
        android:textSize="@dimen/text_20"
        android:textStyle="bold" />


    <RelativeLayout
        android:layout_below="@+id/tv_list_item_heading"
        android:layout_alignLeft="@+id/tv_list_item_heading"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/margin_5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_list_item_description"
            android:layout_width="410dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margin_2dp"
            android:layout_marginTop="@dimen/margin_2dp"
            android:layout_marginBottom="@dimen/margin_2dp"
            android:fontFamily="sans-serif"
            android:layout_centerVertical="true"
            android:gravity="left"
            android:text="@string/dash"
            android:textColor="@color/black"
            android:textSize="@dimen/text_15" />


        <RelativeLayout
            android:layout_centerInParent="true"
            android:layout_toRightOf="@+id/tv_list_item_description"
            android:layout_marginRight="@dimen/margin_2dp"
            android:layout_marginTop="@dimen/margin_2dp"
            android:layout_marginBottom="@dimen/margin_2dp"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_list_item_logo"
                android:layout_width="190dp"
                android:layout_height="100dp"
                android:scaleType="fitCenter"
                android:layout_marginRight="@dimen/margin_2dp"
                android:layout_alignTop="@+id/tv_list_item_arrow"
                android:layout_toLeftOf="@+id/tv_list_item_arrow"
                android:layout_margin="@dimen/margin_10dp"/>

            <TextView
                android:id="@+id/tv_list_item_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="@string/right_angular_arrow"
                android:textColor="@color/black"
                android:textSize="@dimen/text_30" />
        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>
